//Automatic pixels to rem conversion
set-font-size(value) {
    font-size: value; /* add PX (or original value) as backup */

    if (value is inherit) {
        /* do nothing, "inherit" has no unit */
    } else {
        font-size: rm(value);
    }
}

rm() {
    remified = ();

    for arg in arguments {
        push(remified, unit(arg/16, 'rem'));
    }

    return remified;
}

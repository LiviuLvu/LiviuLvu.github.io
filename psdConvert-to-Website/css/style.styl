.icon-menu
   display none

@media screen and (max-width: rm(639px))
   header
      background none
   main
      padding-top rm(0px)

   //make wrap wider on small screen
   .wrap
      width 92%
      margin auto

   .nav-flex
      // left 0rem
      top 0rem
      padding-botom 0px

   .nav-logo img
      display none

   .nav-links
      position absolute
      left 0
      // flex-flow column
      width 100%
      margin rm(0px 0px 0px)
      .a-container
         display none
         border-top 1px solid #d9
      a
         font-size rm(18px)
         padding rm(15px)
      a:hover:after
         content none
   .icon-menu
      position absolute
      left 0px
      background-color #ff
      width 20px
      height 20px
      padding 10px
      display inline
      //css hamburger icon
   .icon-menu:before
      content ""
      position absolute
      width 22px
      height 5px
      border-top (@height * 2) double #000
      border-bottom (@height - 25%) solid #000
   //end of hamburger icon

   .nav-links:hover .a-container
      display inline
      width 100%
      background-color #ff
